---
import Card from "@/components/ui/Card.astro";
import { type ReferenceDataEntry } from "astro:content";
import InventoryCardContent from "./InventoryCardContent.astro";

interface Props {
  title: string;
  icon: string;
  description: string;
  links: ReferenceDataEntry<"links", string>[];
  url?: string;
}
const { title, icon, description, links, url } = Astro.props;

const classes = [
  "snap-center transition-transform duration-200 hover:scale-105",
];
if (url) {
  classes.push("cursor-pointer");
}
---

<div class:list={classes}>
  <Card class="h-96 w-72" padding={4} heading={title} titleClass="text-white">
    {
      url ? (
        <a
          href={url}
          target="_blank"
          class="flex h-full flex-col items-center gap-4"
        >
          <InventoryCardContent
            links={links}
            description={description}
            icon={icon}
          />
        </a>
      ) : (
        <div class="flex h-full flex-col items-center gap-4">
          <InventoryCardContent
            links={links}
            description={description}
            icon={icon}
          />
        </div>
      )
    }
  </Card>
</div>
