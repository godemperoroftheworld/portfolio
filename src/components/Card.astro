---
import type { HTMLAttributes } from "astro/types";
interface Props extends HTMLAttributes<"div"> {
  padding?: number;
  animate?: boolean;
  animation?: string;
  heading?: string;
  titleClass?: string;
  "data-aos-delay"?: string;
  "data-aos-offset"?: string;
}

const {
  padding = 0,
  class: className,
  animate = true,
  animation = "flip-up",
  heading,
  titleClass = undefined,
  ...rest
} = Astro.props;
---

<div
  data-aos={animate ? animation : undefined}
  class:list={[className, "cutout p-0.25 bg-primary-500"]}
  {...rest}
>
  <div class="cutout bg-silver-100 h-full p-0.5 dark:bg-black">
    <div class="cutout p-0.25 bg-primary-500 h-full">
      <div
        class:list={[
          "group/card card cutout dark:bg-silver-950 text-silver-700 dark:text-silver-100 relative flex h-full flex-col overflow-hidden bg-white",
          `p-${padding}`,
        ]}
      >
        {
          heading ? (
            <h1
              class:list={[
                "text-primary-500 mb-4 text-center text-lg font-bold uppercase",
                titleClass,
              ]}
            >
              {heading}
            </h1>
          ) : null
        }
        <slot />
      </div>
    </div>
  </div>
</div>
