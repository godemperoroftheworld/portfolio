---
import DiceRoller from "@/components/DiceRoller.vue";

interface Props {
  name: string;
  value: number;
  stat: string;
}

const { name, value, stat } = Astro.props;
---

<div class="flex gap-2">
  <div class="inline-block w-3 h-3 rounded-full bg-primary-600 self-center">
  </div>
  <div class="flex justify-center w-6 border-b border-b-white">
    <DiceRoller class="px-2" modifier={value} client:visible>
      <span class="italic text-primary-500 text-center oldstyle-nums -ml-1"
        >+{value}</span
      >
    </DiceRoller>
  </div>
  <span>
    {name}<i class="text-sm text-silver-300 select-none"> ({stat})</i>
  </span>
</div>
